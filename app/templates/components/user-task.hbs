<div>
    <h3>Task:</h3>
    {{#if tasks.length}}
        {{#each tasks as |task|}}
            <p>Task : {{task.title}}</p>
            <p>Status: {{task.status}}</p>
            <p>End-Date : {{task.end_date}}</p>
        {{/each}}
    {{else}}
        <h4>No Current Tasks. : )</h4>
    {{/if}}
</div>